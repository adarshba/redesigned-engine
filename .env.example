# n8n Configuration
# Copy this file to .env and customize the values

# ============================================
# Basic Configuration
# ============================================

# Port where n8n will be accessible
N8N_PORT=5678

# Protocol (http or https)
N8N_PROTOCOL=http

# Hostname (use your domain in production)
N8N_HOST=localhost

# Base URL for webhooks (adjust for your domain in production)
WEBHOOK_URL=http://localhost:5678/

# ============================================
# Timezone Configuration
# ============================================

# Set your timezone (list: https://momentjs.com/timezone/)
GENERIC_TIMEZONE=America/New_York

# ============================================
# Authentication (Optional)
# ============================================

# Enable basic authentication (recommended for production)
N8N_BASIC_AUTH_ACTIVE=false

# Basic auth credentials (set these if basic auth is enabled)
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=change-this-password

# ============================================
# Logging Configuration
# ============================================

# Log level: error, warn, info, verbose, debug
N8N_LOG_LEVEL=info

# Log output: console, file
N8N_LOG_OUTPUT=console

# ============================================
# Metrics (Optional)
# ============================================

# Enable Prometheus metrics endpoint
N8N_METRICS=false

# ============================================
# Execution Configuration
# ============================================

# Timeout for workflow execution (in seconds)
# EXECUTIONS_TIMEOUT=300

# Maximum timeout for workflow execution (in seconds)
# EXECUTIONS_TIMEOUT_MAX=3600

# ============================================
# Database Configuration (Optional)
# ============================================
# By default, n8n uses SQLite. For production, consider PostgreSQL or MySQL

# PostgreSQL example:
# DB_TYPE=postgresdb
# DB_POSTGRESDB_HOST=postgres
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=n8n
# DB_POSTGRESDB_PASSWORD=n8n

# MySQL example:
# DB_TYPE=mysqldb
# DB_MYSQLDB_HOST=mysql
# DB_MYSQLDB_PORT=3306
# DB_MYSQLDB_DATABASE=n8n
# DB_MYSQLDB_USER=n8n
# DB_MYSQLDB_PASSWORD=n8n

# ============================================
# Security (Production)
# ============================================

# Encryption key for credentials (generate with: openssl rand -hex 32)
# N8N_ENCRYPTION_KEY=

# JWT secret (generate with: openssl rand -hex 32)
# N8N_JWT_AUTH_SECRET=

# ============================================
# Additional Settings
# ============================================

# Disable collecting anonymous telemetry data
# N8N_DIAGNOSTICS_ENABLED=false

# User management (requires license for > 1 user)
# N8N_USER_MANAGEMENT_DISABLED=true

# Skip SSL certificate validation (for development only)
# NODE_TLS_REJECT_UNAUTHORIZED=0
